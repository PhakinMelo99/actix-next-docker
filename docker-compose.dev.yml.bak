services:
  backend-dev:
    build:
      context: ./backend
      dockerfile: Dockerfile.dev
    container_name: actix-backend-dev
    entrypoint: ["/usr/local/bin/backend"]
    environment:
      - RUST_LOG=info,actix_web=info
      - RUST_BACKTRACE=1
    ports:
      - "8080:8080"
    healthcheck:
      test: ["CMD-SHELL", "curl -fsS http://localhost:8080/healthz || exit 1"]
      interval: 5s
      timeout: 3s
      retries: 15
    restart: unless-stopped
    networks: [appnet]

  frontend-dev:
    build:
      context: ./frontend
      dockerfile: Dockerfile.dev
    container_name: next-frontend-dev
    environment:
      - NODE_ENV=development
      - PORT=3000
      - NEXT_PUBLIC_API_URL=/api/backend
      - BACKEND_INTERNAL_URL=http://backend-dev:8080
    ports:
      - "3000:3000"
    volumes:
      - ./frontend:/app
      - /app/node_modules
    depends_on:
      - backend-dev
    restart: unless-stopped
    networks: [appnet]

networks:
  appnet:
    driver: bridge
